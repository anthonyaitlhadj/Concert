<div id="showconcerts" class="row" xmlns:border-radius="http://www.w3.org/1999/xhtml">





  <% @shows.each do |show| %>

  <div  id="concert" class="col-sm-6 col-md-4">



    <div  class="thumbnail">





      <img id="drag1" src="/assets/concert.jpg" draggable="true" ondragstart="drag(event)" width="500" height="80">



      <div class="caption">

        <h3><%= show.name %></h3>

        <p id="concertdate"><%= show.date %></p>

        <p>Places dispo: <%= show.place %></p>

        <p>Prix: <%= show.price %></p>

        <p id="bouton" class="btn btn-primary" role="button"> <%= link_to "voir plus", show_path(show.id)%></p>

        <p id="bouton" class="btn btn-primary" role="button"> <%= link_to "Delet", show_path(show.id), method: :delete%></p>

        <p id="bouton" class="btn btn-primary" role="button"> <%= link_to "update", edit_show_path(show.id)%></p>





      </div>


    </div>


  </div>

      <%end%>

</div>




