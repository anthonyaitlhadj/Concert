<div class="container">

  <div class="row">

    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

      <div id="panel" class="panel panel-info" >



        <div id="panel2" class="panel-heading">

          <div class="panel-title" style="text-align: center">Insert Concert </div>

        </div>



        <div   style="padding-top:30px" class="panel-body" >

          <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>





          <%=  form_for @show , :html => {:class => "form-horizontal"}, url: {action: "create"} do |show| %>





              <% if @show.errors.any? %>

                  <div class="error_messages">

                    <h2>Form is invalid</h2>

                    <ul>

                      <% for message in @show.errors.full_messages %>

                          <li><%= message %></li>

                      <% end %>

                    </ul>

                  </div>


              <% end %>




              <div id="loginbox2" style="margin-bottom: 25px" class="input-group">

                <span class="input-group-addon glyphicon glyphicon-user" aria-hidden="true"></span>

                <%=	 show.text_field :date, placeholder: "date" , :html =>{:class=>"form-control"}%>

              </div>

              <div style="margin-bottom: 25px" class="input-group">

                <span class="input-group-addon glyphicon glyphicon-envelope"></span>

                <%=	 show.text_field :name, placeholder: "Nom du concert", :html =>{:class=>"form-control"} %>

              </div>

              <div style="margin-bottom: 25px" class="input-group">

                <span class="input-group-addon glyphicon glyphicon-lock"></span>

                <%=	 show.text_field :place, placeholder: " places ", :html =>{:class=>"form-control"}  %>

              </div>


              <div style="margin-bottom: 25px" class="input-group">

                <span class="input-group-addon glyphicon glyphicon-lock"></span>

                <%=	 show.text_field :adress, placeholder: " Adress ", :html =>{:class=>"form-control"}  %>

              </div>


              <div style="margin-bottom: 25px" class="input-group">

                <span class="input-group-addon glyphicon glyphicon-lock"></span>

                <%=	 show.text_field :price, placeholder: " price ", :html =>{:class=>"form-control"}  %>

              </div>

              <div style="text-align: center" class="form-group">

                <div class="col-sm-12 controls">

                  <%=	 show.submit "Envoyer" , :html =>{:class=>"form-control"},class: "btn btn-primary"%>



                </div>

              </div>

              </div>
              </div>

              </div>

          <%	end %>


          </div>

</div>