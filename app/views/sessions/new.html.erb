<%= form_for @user, url: {action: "create"} do |user| %>
    <div class="field">
      <%= label_tag :email %>
      <%= user.text_field :email %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= user.password_field :password %>
    </div>
    <div class="field">
      <%= user.check_box :remember_me! %>
      <%= label_tag :remember_me %>
    </div>
    <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>