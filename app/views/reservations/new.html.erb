<div class="container">
  <div class="row">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <div class="panel panel-info" >

        <div class="panel-heading">
          <div class="panel-title" style="text-align: center">Reservation</div>
        </div>

        <div style="padding-top:30px" class="panel-body" >
          <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
          <%=  form_for @resa, :html => {:class => "form-horizontal"}, url: {action: "create"} do |reservation| %>
              <% if @resa.errors.any? %>
                  <div class="error_messages">
                    <h2>Form is invalid</h2>
                    <ul>
                      <% for message in @resa.errors.full_messages %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon glyphicon glyphicon-user" aria-hidden="true"></span>
                <%=	 reservation.text_field :firstname, placeholder: "Prénom" , :html =>{:class=>"form-control"}%>
              </div>
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon glyphicon glyphicon-user"></span>
                <%=	 reservation.text_field :lastname, placeholder: "Nom", :html =>{:class=>"form-control"}%>
              </div>

              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon glyphicon glyphicon-envelope"></span>
                <%=	 reservation.text_field :email, placeholder: "Email", :html =>{:class=>"form-control"} %>
              </div>

              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon glyphicon glyphicon-envelope"></span>
                <%=	 reservation.text_field :nb_tickets, placeholder: "Nombre", :html =>{:class=>"form-control"} %>
              </div>

              <div style="text-align: center" class="form-group">
                <div class="col-sm-12 controls">
                  <%=	 reservation.submit "Réserver", :html =>{:class=>"form-control"} %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <%end%>
    </div>         
</div>