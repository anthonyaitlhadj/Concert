<div class="container">
  <div class="row">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <div class="panel panel-info" >

        <div class="panel-heading">
          <div class="panel-title" style="text-align: center">Inscription</div>
        </div>

        <div style="padding-top:30px" class="panel-body" >
          <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
            <%=  form_for @user, :html => {:class => "form-horizontal"}, url: {action: "create"} do |user| %>
              <% if @user.errors.any? %>
                  <div class="error_messages">
                    <h2>Form is invalid</h2>
                    <ul>
                      <% for message in @user.errors.full_messages %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon glyphicon glyphicon-user" aria-hidden="true"></span>
                <%=	 user.text_field :firstname, placeholder: "PrÃ©nom" , class: "form-control"%>
                <%=	 user.hidden_field :admin, :html => {:value=>0} %>
              </div>
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon glyphicon glyphicon-user"></span>
                <%=	 user.text_field :lastname, placeholder: "Nom de Famille", class: "form-control" %>
              </div>

              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon glyphicon glyphicon-envelope"></span>
                <%=	 user.text_field :email, placeholder: "Email", class: "form-control" %>
              </div>

              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon glyphicon glyphicon-envelope"></span>
                <%=	 user.text_field :pseudo, placeholder: "Pseudo", class: "form-control" %>
              </div>

              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon glyphicon glyphicon-lock"></span>
                <%=	 user.password_field :password, placeholder: "Mot de passe", class: "form-control"  %>
              </div>

              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon glyphicon glyphicon-lock"></span>
                <%=	 user.password_field :password_confirmation, placeholder: "Confirmation du mot de passe", class: "form-control"  %>
              </div>

              <div style="text-align: center" class="form-group">
                <div class="col-sm-12 controls">
                  <%=	 user.submit "Envoyer" , class: "form-control" %>
                </div>
              </div>

        </div>

      </div>
    </div>
    <%	end %>
  </div>
</div>
