            <li><a href="#">Contact</a></li>
          </ul>
          <%#	 formulaire %>
          <form class="navbar-form navbar-left">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Chercher un concert">
            </div>
            <button type="submit" class="btn btn-default">Recherche</button>
          </form>

        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <%= yield %>
